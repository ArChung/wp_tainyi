<div
	class="share flex justify-center">
	{# TUMBLR #}

	{% if 'tumblr' in fields %}
		<a class="{{btn_cls}}" target="_blank" title="tumblr" href="https://www.tumblr.com/share/link?url={{ link }}&name={{ title }}&description={{  excerpt }}">
			<i class="bd bd-tumblr " aria-hidden="true"></i>
			<span class="sr-only">分享到tumblr</span>
		</a>
	{% endif %}
	{# FACEBOOK #}
	{% if 'facebook' in fields  %}
		<a class="{{btn_cls}}" target="_blank" title="Facebook" href="http://www.facebook.com/sharer.php?u={{ link }}">

			<svg class='w-8 fill-current text-light' viewbox="0 0 22 22">
