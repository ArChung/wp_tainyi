	{% endif %}
	{% if 'pinterest' in fields %}
		{# PINTEREST #}
		<a class="{{btn_cls}}" target="_blank" title="Pinterest" href="https://pinterest.com/pin/create/bookmarklet/?media={{ thumbnail }}&url={{ link }}&description={{ title }}">
			<i class="bd bd-pinterest " aria-hidden="true"></i>
			<span class="sr-only">分享到pinterest</span>
		</a>
	{% endif %}
</div>
