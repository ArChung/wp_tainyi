<nav class="app-bar flex lg:flex-col bg-black fixed top-0 z-50 w-full left-0 pl-4">
	<div
		class="flex items-center justify-between w-full">
		{# logo #}
		<div class="brand z-5 lg:w-auto">
			<a href="{{uri}}" title="首頁">
				<img class="logo link w-32" src="{{ site.logo.normal}}" title="網站logo" alt="網站logo">
			</a>
		</div>
		<div class='flex'>
			<div class="menu drawer w-full lg:w-auto md:drawer --left text-2xl p-5 bg-black lg:p-0 lg:text-base">
				<a href="javascript:;" class="close" title="關閉選單">
					<svg viewbox="0 0 20 20" class='fill-current text-white w-8'>
						<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
					</svg>
				</a>

				<div class="container flex lg:justify-end  h-full lg:h-auto text-white">
					<ul class="nav --normal flex lg:flex-row flex-col ">
						{% for item in header_menu %}

							{% if item.get_children %}
								<li class="item hasChild">
									<a class="link flex items-center cursor-pointer">
										{{ item.title }}
									</a>
									{# Second level menu #}
									<ul class="dropdown bg-black pl-6 lg:absolute lg:pl-0">
										{% for child in  item.get_children %}
											<li class="item ">
												<a class="link flex items-center" href="{{ child.link }}">
													{{ child.title }}
												</a>
											</li>
										{% endfor %}
									</ul>
								</li>
							{% else %}
								<li class="item">
									<a class="link flex items-center" target="{{item.target}}" href="{{ item.link}}">
										{{ item.title }}
									</a>
								</li>
							{% endif %}

						{% endfor %}
					</ul>
				</div>
			</div>
			<div class="hasChild bg-pink flex items-center justify-center p-3 maintain">
				<img src="{{ 'images/lanIcon.png' | assets}}" alt="">
				<ul class="dropdown bg-black">
					<li class="item ">
						<a class="link flex items-center text-white" href="#">
							繁中
						</a>
					</li>
					<li class="item ">
						<a class="link flex items-center text-white" href="#">
							English
						</a>
					</li>

				</ul>
			</div>
			<a href="/contact" class="bg-blue flex items-center justify-center p-3 hover-bg">
				<img src="http://fudi.domoidea.com/app/uploads/fudi/talk.png" alt="">
			</a>
			<div class="bg-yellow flex items-center justify-center p-3 lg:hidden">
				<a class="gee link" data-gene="click:drawer.toggle" data-ta="{{toggle is defined ? toggle :'.app-bar .menu'}}">
					<svg class='w-8 fill-current text-black' viewbox="0 0 20 20">
						<path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
					</svg>
				</a>
			</div>
		</div>
	</div>

</nav>
