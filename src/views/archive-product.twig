{% extends "@layout/base.twig"%}
{% block necker %}
	<div class="container wider">
		{% include "@cmpt/slider/slider.twig" with {banners:products_banners,ratio_cls:"neck-ratio-thin"}%}
	</div>
{% endblock %}

{% block bodier %}

	<div class="container py-16 md:py-4">
		<div class="flex md:flex-col-reverse">
			<div class="side w-48 md:w-full pro-btnSet">
				{{sidebar}}
			</div>
			<div class="innerContainer flex-grow">
				<div class="flex flex-wrap justify-between ani-stagger">
					{% for item in posts %}
						{% include "@cmpt/bag.twig" with { item: item ,cls :'w-1/3 mb-4 ani-item md:w-1/2'} %}
					{% endfor %}

					<div class="space w-1/3"></div>
					<div class="space w-1/3"></div>
					<div class="space w-1/3"></div>

				</div>


				{# pagination  #}
				<div class="mt-8">

					{% include "@cmpt/pagination/pagination.twig" with {row:pagination }%}
				</div>
			</div>

		</div>

	</div>
{% endblock %}
