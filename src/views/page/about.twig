{% set cur = 'about' %}
{% block necker %}
	<div class="container wider">
		{% include "@cmpt/slider/slider.twig" with {banners:page_banners}%}
	</div>
{% endblock %}
{% block bodier %}

	{{post.content}}


	<div class="container overflow-hidden pb-14" >
		<div class="bg-repeat my-16 md:my-4" style='height:1px;background-image:url({{"images/line.png"|assets}})'></div>
		<div class="s-title py-8  text-center mt-8 mb-8 ani-f-b" id='clients'>
			<h1>{{"天毅的客戶"|t}}</h1>
			<img src="https://www.tienyih.com/app/uploads/tainyi/about_t2-1.png" alt="" class="d-txt onCenter">
		</div>

		<section class='ani-f-b'>
			<div class="slider gee clientSlider" data-gene="init:slider-clients">
				{% for key, item in clients %}
					{% set img =  Image(key) %}
					<div class="relative ">
						<img src="{{ img.src}}" alt="{{ img.alt }}">
						<div class="roundBg  scale-150 transform"></div>
					</div>
				{% endfor %}
			</div>
		</section>


	</div>
{% endblock %}
